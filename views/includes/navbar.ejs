<style>
  .btn-search {
    background-color: #fe424d;
    border: none;
    color: white;
    border-radius: 25px;
    padding: 0.5rem 1rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    border: none;
    color: white;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    border: 1px solid #fe424d;
    width: 300px;
    transition: all 0.3s ease-in-out;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-brands fa-lastfm fa-xl" style="color: #fe424d"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link active" href="/listings">Explore</a>
      </div>
      <% if(currentUser) { %>
      <div class="navbar-nav ms-auto">
        <form
          class="d-flex"
          role="search"
          action="/listings/search"
          method="GET"
        >
          <input
            class="form-control me-2 search"
            type="search"
            name="country"
            placeholder="Search Country"
            aria-label="Search"
            required
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <% } %>
      <div class="navbar-nav ms-auto">
        <a class="nav-link active" href="/listings/new">Add new</a>
        <% if (!currentUser) { %>
        <a class="nav-link active" href="/signup"><b>SignUp</b></a>
        <a class="nav-link active" href="/login"><b>LogIn</b></a>
        <% } %> <% if (currentUser) { %>
        <a class="nav-link active" href="/logout"><b>LogOut</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

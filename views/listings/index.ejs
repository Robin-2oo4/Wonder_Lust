<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    margin-top: 1rem;
    margin-bottom: 2rem;
    align-items: center;
  }
  .filters {
    text-align: center;
    opacity: 0.7;
    margin-right: 2rem;

    margin: 0.5rem;
    padding: 0.5rem;
    border-radius: 1rem;
    background-color: #f8f9fa;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease !important;
  }
  .filters:hover {
    opacity: 1;
    transform: scale(1.05);
  }
  .toggle-switch:hover {
    background-color: #e2e6ea;
  }

  .tax-info {
    display: none;
  }
  .toggle-switch {
    height: 2.5rem;
    margin-left: 8rem;
    margin-right: 0rem;
    margin-top: 0.5rem;
    padding: 0.5rem;
    border-radius: 1rem;
    background-color: #f8f9fa;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease !important;
  }
</style>

<div id="filters">
  <div class="filters">
    <div><i class="fa-solid fa-fire-flame-curved"></i></div>
    <i>Trending</i>
  </div>
  <div class="filters">
    <div><i class="fa-solid fa-bed"></i></div>
    <i>Rooms</i>
  </div>
  <div class="filters">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <i>Iconic Cities</i>
  </div>
  <div class="filters">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <i>Beaches</i>
  </div>
  <div class="filters">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <i>Amazing Pools</i>
  </div>
  <div class="filters">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <i>Castles</i>
  </div>
  <div class="filters">
    <div><i class="fa-solid fa-cable-car"></i></div>
    <i>Adventure</i>
  </div>
  <div class="toggle-switch ms-auto">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        ><i>Display total after taxes</i></label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
  <% if (allListings.length > 0) { %> <% for(listing of allListings) {%>
  <a href="/listings/<%= listing._id %>" style="text-decoration: none">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listingimage"
        style="height: 20rem"
      />
      <div class="card-img-overlay">b</div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %> </b><br />
          Price: &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
          <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %> <% } else { %>
  <div class="no-listings-message ms-auto me-auto mt-5 text-center">
    <i class="fa-solid fa-circle-exclamation"></i>
    <p>No hotel found for the specified country.</p>
    <a href="/listings" class="btn btn-primary mt-3">View All Hotels</a>
  </div>
  <% } %>
</div>

<script>
  const toggleSwitch = document.getElementById("switchCheckDefault");
  toggleSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      info.style.display = toggleSwitch.checked ? "inline" : "none";
    }
  });
</script>
